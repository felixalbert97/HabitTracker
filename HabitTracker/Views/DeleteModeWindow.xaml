<Window x:Class="HabitTracker.Views.DeleteModeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitTracker.Views"
        xmlns:models="clr-namespace:HabitTracker.Models"
        mc:Ignorable="d"
        Title="Löschen" Height="300" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10,0,10,0">
            <TextBlock Text="Aufgabe löschen" FontSize="20" Margin="0,10,0,0"/>
            <TextBlock Text="Sie sind im Begriff, eine wiederkehrende Aufgabe zu löschen. Möchten Sie diese Aufgabe löschen, alle noch ausstehenden Aufgaben löschen, alle schon erledigten Aufgaben löschen, oder alle Wiederholungen löschen?"
                       TextWrapping="Wrap" 
                       Margin="0,10,0,0" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <ComboBox ItemsSource="{Binding DeleteModes}"
                  SelectedItem="{Binding SelectedDeleteMode, Mode=TwoWay}" 
                  DisplayMemberPath="DisplayName"
                  Margin="10,20,10,0" Grid.Row="1" VerticalAlignment="Top"/>

        <Button Content="Löschen" 
                Command="{Binding ConfirmDeleteCommand}"
                Margin ="20,20,0,0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="70" />

        <Button Content="Abbrechen" 
                Command="{Binding CancelDeleteCommand}"
                Margin ="0,20,20,0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Width="70"/>

    </Grid>
</Window>
