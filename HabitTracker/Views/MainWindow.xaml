<Window x:Class="HabitTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Habit Tracker" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Habit list -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Gewohnheiten" FontSize="20" />
            <ListBox ItemsSource="{Binding Habits}"
                     SelectedItem="{Binding SelectedHabit}"
                     DisplayMemberPath="Name"
                     Height="200" Margin="0,10,0,10"/>

            <Button Content="Löschen"
                    Command="{Binding DeleteHabitCommand}" />
            
            <TextBlock Text="Name:" Margin="0,10,0,0" />
            <TextBox Text="{Binding NewHabitName}" Width="200" />

            <TextBlock Text="Kategorie:" Margin="0,10,0,0" />
            <TextBox Text="{Binding NewHabitCategory}" Width="200" />

            <Button Content="Neue Gewohnheit hinzufügen" Margin="0,20,0,0"
                    Command="{Binding AddHabitCommand}" />
        </StackPanel>

        <!-- Detail area -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Details" FontSize="20" />
            <TextBlock Text="{Binding SelectedHabit.Name}" FontSize="18"/>
            <TextBlock Text="{Binding SelectedHabit.Category}"/>

            <Button Content="Heute erledigt"
                    Command="{Binding MarkDoneCommand}"
                    Margin="0,20,0,0"/>

            <TextBlock Text="Heute schon erledigt:" FontSize="16" Margin="0,20,0,0"/>
            <ListBox ItemsSource="{Binding HabitsDoneToday}"
                     DisplayMemberPath="Name"
                     Height="200" Margin="0,10,0,10"/>
        </StackPanel>

    </Grid>
</Window>