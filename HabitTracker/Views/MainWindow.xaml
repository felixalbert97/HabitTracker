<Window x:Class="HabitTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Habit Tracker" Height="470" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Habit list -->
        <StackPanel Grid.Column="0" Grid.Row="0" Margin="10,0,10,0">
            <TextBlock Text="Aufgaben" FontSize="20" HorizontalAlignment="Center" />
            <ListBox ItemsSource="{Binding UncompletedTasks}"
                     SelectedItem="{Binding SelectedTask}"
                     DisplayMemberPath="Name"
                     Height="269" Margin="0,10,0,10"/>
            <Button Content="Erledigt"
                    Command="{Binding DeleteTaskCommand}"
                    Margin="0,0,0,10" Width="170"/>
            <Button Content="Löschen"
                    Command="{Binding DeleteTaskCommand}" 
                    Margin="0,0,0,10" Width="170" />


        </StackPanel>

        <!-- Detail area -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,10,0">
            <TextBlock Text="Erledigt" FontSize="20" HorizontalAlignment="Center" />
            <ListBox ItemsSource="{Binding CompletedTasks}"
                     SelectedItem="{Binding SelectedTask}"
                     DisplayMemberPath="Name"
                     Height="269" Margin="0,10,0,10"/>
            <Button Content="Als nicht erledigt markieren"
                    Command="{Binding DeleteTaskCommand}"
                    Margin="0,0,0,10" HorizontalAlignment="Center" Width="170"/>
            <Button Content="Löschen"
                    Command="{Binding DeleteTaskCommand}"
                    Margin="0,0,0,10" HorizontalAlignment="Center" Width="170"/>

        </StackPanel>
        <DatePicker VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Content="Neue Aufgabe erstellen"
                Command="{Binding DeleteTaskCommand}"
                Margin="0,20,0,0" Grid.Column ="0" Grid.Row="1" HorizontalAlignment="Center" Width="250" VerticalAlignment="Top" />
    </Grid>
</Window>