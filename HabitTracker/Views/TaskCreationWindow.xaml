<Window x:Class="HabitTracker.Views.TaskCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitTracker.Views"
        xmlns:models="clr-namespace:HabitTracker.Models"
        mc:Ignorable="d"
        Title="Neue Aufgabe erstellen" Height="450" Width="600">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">

            <TextBlock Text="Name:" Margin="0,10,0,10" FontSize="16" />
            <TextBox Text="{Binding NameField, Mode=TwoWay}" Width="200" />

            <TextBlock Text="Kategorie:" Margin="0,10,0,10" FontSize="16" />
            <TextBox Text="{Binding CategoryField, Mode=TwoWay}" Width="200" />

            <Button Content="Als Vorlage speichern" Margin="0,20,0,0" Width="150"
                    Command="{Binding AddTaskTemplateCommand}" />

            <TextBlock Text="Datum:" Margin="0,10,0,0" FontSize="16" />
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1">
            <DatePicker SelectedDate ="{Binding StartDate, Mode=TwoWay}"
                    HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <TextBlock Text="Bis:" Margin="0,10,0,0" FontSize="16"
                       Opacity="{Binding EndDateTextOpacity}"/>
            <DatePicker SelectedDate ="{Binding EndDate, Mode=TwoWay}"
                        IsEnabled ="{Binding IsEndDateEnabled}"
                    HorizontalAlignment="Left" Margin="10,10,0,10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <ComboBox ItemsSource="{Binding RepeatValues}"
                    SelectedItem="{Binding SelectedRepeatOption, Mode=TwoWay}"
                    Width="120" Margin="0,10,0,0"/>
        </StackPanel>



        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" >
            <Button Content="Aufgabe erstellen"
                    Command="{Binding TaskCreationCommand}"
                    Margin="0,10,0,0" Width="150"/>
        </StackPanel>



        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2">
            <ListBox x:Name="TemplatesListBox"
                     ItemsSource="{Binding TaskTemplates, Mode=OneWay}"
                     SelectedItem="{Binding SelectedTaskTemplate}"
                     Height="300"
                     PreviewMouseLeftButtonDown="TemplatesListBox_PreviewMouseLeftButtonDown" SelectionChanged="TemplatesListBox_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:TaskTemplate}">
                        <Border Padding="6" Margin="2">
                            <StackPanel Orientation="Vertical" Grid.Row="0" VerticalAlignment="Top">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Category}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="2">
            <Button Content="Löschen"
                    Command="{Binding DeleteTaskTemplateCommand}" 
                    Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
